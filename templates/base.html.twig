<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="vh-100 background-radial-gradient">
        <header class="d-flex align-items-center justify-content-between border-bottom border-2 border-light-subtle p-xl-4 pl-md-2 p-1">
            <h1><a href="{{ path('homepage') }}" class="text-black-50 fs-1 fw-bold text-decoration-none">Guestbook</a></h1>
            <menu class="gap-3 d-flex align-items-center justify-content-center list-unstyled">
                {% for conference in conferences %}
                    <li>
                        <a class="text-decoration-none text-light fs-5 fw-semibold" href="{{ path('conference', {id: conference.id}) }}">
                            {{ conference }}
                        </a>
                    </li>
                {% endfor %}
            </menu>
            <hr>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>

